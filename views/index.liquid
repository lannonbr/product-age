<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="routePrefix" content="/{{routePrefix}}" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="/{{routePrefix}}/css/style.css" />
    <script src="/{{routePrefix}}/js/main.js" defer></script>
  </head>
  <body class="no-js">
    <main>
      <header>
        <h1>{{content.appTitle}}</h1>
        <h2>{{content.pageTitle}}</h2>
      </header>
      <article id="homepage">
        <div id="contentWrapper">
          <p>
            A listing of mainly tech products and when I bought them and how old
            they are
          </p>
          <div id="mainContent">
            <div id="chartsContainer">
              <section>
                <h2>Weekly Cost Histogram</h2>
                <canvas id="weeklyCostChart"></canvas>
              </section>
              <section>
                <h2>Age Histogram</h2>
                <canvas id="ageChart"></canvas>
              </section>
            </div>
            <div id="tableContainer">
              <table>
                <thead>
                  <tr>
                    <th>Product</th>
                    <th>Purchase Date</th>
                    <th>Age</th>
                    <th>Monthly Cost</th>
                    <th>Weekly Cost</th>
                  </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    {% if product.annivClass %}
                      <tr class="{{product.annivClass}}">
                    {% else %}
                      <tr>
                    {% endif %}
                      <td>{{product.name}}</td>
                      <td>{{product.purchaseDate}}</td>
                      <td>{{product.age}}</td>
                      <td>{{product.monthlyCost}}</td>
                      <td>{{product.weeklyCost}}</td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </article>
    </main>
  </body>
</html>
