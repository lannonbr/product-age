{
  "http": {
    "port": 3006
  },
  "makeBuildArtifacts": true,
  "https": {
    "enable": false
  },
  "modelsPath": "mvc/models",
  "viewsPath": "mvc/views",
  "viewEngine": ["html:teddy"],
  "controllersPath": "mvc/controllers",
  "preprocessedViewsPath": false,
  "csrfProtection": false,
  "css": {
    "sourcePath": "css",
    "compiler": {
      "enable": true,
      "module": "less",
      "options": {}
    },
    "output": "css",
    "versionFile": null
  },
  "js": {
    "sourcePath": "js",
    "webpack": {
      "enable": true,
      "bundles": [
        {
          "config": {
            "entry": "${js.sourcePath}/main.js",
            "devtool": "source-map",
            "output": {
              "path": "${publicFolder}/js"
            },
            "resolve": {
              "alias": {
                "fs": false,
                "path": false
              },
              "modules": [
                "${js.sourcePath}",
                "${publicFolder}/js",
                "${appDir}",
                "node_modules"
              ]
            }
          }
        }
      ]
    }
  },
  "favicon": "images/favicon.ico",
  "symlinks": [
    {
      "source": "${staticsRoot}/images",
      "dest": "${publicFolder}/images"
    }
  ]
}
